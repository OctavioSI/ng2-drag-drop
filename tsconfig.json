{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "moduleResolution": "node",   
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "lib": [
    "es6",
    "es2015",
    "es2015.iterable", 
    "dom"
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "demo"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  }
}